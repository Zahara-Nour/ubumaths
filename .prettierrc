{
	"useTabs": true,
	"singleQuote": true,
	"plugins": ["prettier-plugin-svelte"],
	"pluginSearchDirs": ["."],
	"overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }],
	"semi": false,
	"trailingComma": "all",
	"printWidth": 80,
	"jsxSingleQuote": true,
	"svelteSortOrder": "scripts-markup-styles",
	"svelteStrictMode": true,
	"svelteBracketNewLine": true,
	"svelteAllowShorthand": true
}
